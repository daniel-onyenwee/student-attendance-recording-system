{
  "name": "@student-attendance-recording-system/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "The student attendance recording system backend",
  "keywords": [
    "backend",
    "express"
  ],
  "author": "daniel-onyenwee <danielonyenwee@gmail.com>",
  "homepage": "",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test",
    "src": "src"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "npm run ts:build && node ./lib/index.js",
    "dev": "concurrently -k \"npm run ts:watch\" \"nodemon ./lib/index.js\"",
    "test": "vitest --run",
    "ts:build": "tsc --build",
    "ts:watch": "tsc --watch",
    "init": "npm run init:db",
    "init:db": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test:get:route": "vitest --run test/get.test.ts",
    "test:process:route": "vitest --run test/process.test.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "prisma": "^5.12.1",
    "supertest": "^6.3.4",
    "vitest": "^1.5.0"
  }
}
